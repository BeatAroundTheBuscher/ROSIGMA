      ArmorEffectiveness: 0.75  # *** PLASMA rebalance
      FireThreshold: 70
      ToArmorPre: 0.15
      ToArmor: 0.15
    powerRangeReduction: 5
    powerRangeThreshold: 35.0  # plasma decoheres at longer ranges

