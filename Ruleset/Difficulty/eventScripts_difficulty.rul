eventScripts:
  - type: STR_EASY_MODE_FUNDING_SCRIPT
    oneTimeRandomEvents: #only triggers the event one time, once this is researched. Could make a recurring easy funding boon event that gives say, 500k a month
      STR_EASY_BOON_FUNDS: 100
    firstMonth: 0
    lastMonth: 0
    executionOdds: 100
    researchTriggers:
      STR_EASY_MODE_FUNDING_RESEARCH: true

  - type: STR_EASY_MODE_FUNDING_CONTINUOUS_SCRIPT
    eventWeights: #uncertain on the right syntax here, thereÂ´s just one event that should be triggered, and every month
        0:
          STR_EASY_BOON_FUNDING_CONTINUAL: 100
    firstMonth: 0 #no last months, last entire game
    executionOdds: 100
    researchTriggers:
      STR_EASY_MODE_FUNDING_CONTINUAL_RESEARCH: true

  - type: STR_HARD_MODE_FUNDING_SCRIPT
    oneTimeRandomEvents: #only triggers the event one time, once this is researched. Could make a recurring easy funding boon event that gives say, 500k a month
      STR_HARD_MALUS_FUNDS: 100
    firstMonth: 0
    lastMonth: 1
    executionOdds: 100
    researchTriggers:
      STR_HARD_MODE_FUNDING_RESEARCH: true

  - type: STR_HARD_MODE_FUNDING_CONTINUOUS_SCRIPT
    oneTimeSequentialEvents: #triggers sequential event one time, once this is researched. Unsure if it will trigger one time, every month, if there is no lastMonth set? See above for alternative A.
      - STR_HARD_MALUS_FUNDING_CONTINUAL
    firstMonth: 0
    executionOdds: 100
    researchTriggers:
      STR_EASY_MODE_FUNDING_CONTINUAL_RESEARCH: true


### ADEPTS

  - type: STR_NORMAL_MODE_ADEPTS_SCRIPT
    oneTimeSequentialEvents:
        - STR_NORMAL_MODE_ADEPTS1 #This event gives the player 15 adepts, -15x30k = -450k cash. 30k is the 40k cost per adept, 20k in Rosigma (easy).
        - STR_NORMAL_MODE_ADEPTS2 #This event gives the player 25 adepts, -25x30k = -750k cash
        - STR_NORMAL_MODE_ADEPTS3 #This event unlocks STR_HIRE_ADEPT_UNLOCK, - 250k cash (total event series malus to cash = 1,2 million, for 40 adepts)
    firstMonth: 1
    lastMonth: 6
    executionOdds: 100
    minDifficulty: 0
    maxDifficulty: 4
    researchTriggers:
      STR_MEDIUM_MODE_ADEPTS: true #this event script only fires if this is researched

  - type: STR_HARD_MODE_ADEPTS_SCRIPT
    oneTimeSequentialEvents:
        - STR_HARD_MODE_ADEPTS1 #This event gives the player 10 adepts, -500k (10x50k) credits
        - STR_HARD_MODE_ADEPTS2 #This event gives the player 15 adepts, -750k (15x50k) credits
        - STR_HARD_MODE_ADEPTS3 #This event gives the player 20 adepts, -1m (20x50k) credits
        - STR_HARD_MODE_ADEPTS4 #This event gives the player 20 adepts, -1m (20x50k) credits
        - STR_HARD_MODE_ADEPTS5 #This event gives the player 20 adepts, -1m (20x50k) credits
        - STR_HARD_MODE_ADEPTS6 #this event gives the player 25 adepts, -1,25m credits and unlocks STR_HIRE_ADEPT_UNLOCK. Total event chain cost = 5,5 million in the first 6 months, for +110 Adepts.
    firstMonth: 1 #does this ensure one of these events, in order, trigger every month? Or does their "Timer" need to be set to a month worth of minutes
    lastMonth: 7
    executionOdds: 100
    minDifficulty: 0
    maxDifficulty: 4
    researchTriggers:
      STR_HARD_MODE_ADEPTS: true #this event script only fires if this is researched


