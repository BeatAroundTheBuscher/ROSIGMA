extended:
  scripts:
    detectUfoFromCraft: 
      - offset: -1 # runs before local scripts
        code: |
          var int temp;

          craft.Stats.getRadarChance temp; 
          debug_log "getRadarChance" temp;

          if gt temp 100; # radarChance > 100 isn't used on the crafts
            return 3 100; # decoder visual  
          end;
          return 1 100; # normal visual
