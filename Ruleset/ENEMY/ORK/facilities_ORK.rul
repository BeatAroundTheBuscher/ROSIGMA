    connectorsDisabled: true
    placeSound: {mod: 40k, index: 98}
    spriteShape: 2110
    size: 2
    buildCost: 450000
    crafts: 1
    buildTime: 5
    monthlyCost: 25000
    workshops: 50 # Mek shop and Hangar
#    storage: 5
    mapName: XBASE_ORK01
#    storageTiles:
#      - [3, 6, 0]
    verticalLevels:
      - type: ground
        terrain: baseTerrain
        size: [2, 2, 0]
        blocks: [12] # 2x2 with hole cut out for ramp
      - type: middle
        terrain: XBASE_ORK
        blocks: [1] # 1, 2nd entry
